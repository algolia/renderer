{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
    ],
    "module": "CommonJS",
    "strict": true,
    "outDir": "dist/",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}

{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "strict": true,
    "outDir": "dist/",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "api/*": [
        "src/api/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "helpers/*": [
        "src/helpers/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
